<div class="row">
  <div class="span12">
    <h1>Blog</h1>
  </div>
</div>

        <% @posts.each do |post| %>
        <div class="row">
        <div class="span10">
            <h2><%= post.title %></h2>
            <p><small><%= post.time %></small></p>
            <p>
              <% if post.body.size > @max_preview %><%= raw @markdown.render(post.body[0..@max_preview]) %>(Continua...)
              <% else %> <%= raw @markdown.render(post.body) %>
              <% end %>
            </p>

            <p><%= link_to 'View complete post', post, {:class => 'btn'} %></p>

          <% if user_signed_in? %>
            <p><%= link_to 'Edit', edit_post_path(post), {:class => 'btn'} %>
            <%= link_to 'Destroy', post, {:class => 'btn', :method => :delete, data: { confirm: 'Are you sure?' } } %></p>
          <% end %>
        </div>
        </div>
        <% end %>

        <div class="row">
          <div class="text-center span12">
          <% if user_signed_in? %>
            <%= link_to 'New Post', new_post_path, {:class => 'btn btn-primary'} %>
          <% end %>
          <%= link_to 'Archive', archive_posts_path, {:class => 'btn btn-primary'} %>
          </div>
        </div>
</div>
