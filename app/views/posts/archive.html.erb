<div class="row">
  <div class="col-md-12">
    <h1>Blog</h1>
  </div>
</div>

        <div class="row">
          <div class="col-md-10">
            <table class="table table-striped table-hover table-bordered">
            <thead>
              <th>Date</th>
              <th>Title</th>
              <th></th>
            </thead>
            <tbody>
              <% @posts.each do |post| %>
                <tr>
                <td><%= post.time.strftime('%m/%d/%Y') %></td>
                <td><%= post.title %></td>
                <td class="text-right">
                  <%= link_to 'View', post, {:class => 'btn'} %>
                <% if user_signed_in? %>
                  <%= link_to 'Edit', edit_post_path(post), {:class => 'btn'} %>
                  <%= link_to 'Destroy', post, {:class => 'btn', :method => :delete, data: { confirm: 'Are you sure?' } } %>
                <% end %>
                </td>
                </tr>
              <% end %>
            </tbody>
          </table>
          </div>
        </div>
        <div class="row">
          <div class="text-center col-md-12">
          <% if user_signed_in? %>
            <%= link_to 'New Post', new_post_path, {:class => 'btn btn-primary'} %>
          <% end %>
          </div>
        </div>
</div>
