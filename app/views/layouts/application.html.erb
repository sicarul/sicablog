<!DOCTYPE html>
<html>
<head>
  <title>Sicablog</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>  
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="navbar navbar-inverse navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <%= link_to 'Sicarul', root_path, {:class => 'brand'} %>
      <div class="nav-collapse">
        <ul class="nav">
          <li><%= link_to 'Blog', posts_path %></li>
          <li><%= link_to 'My github', 'http://www.github.com/Sicarul', {:target => '_blank'} %></li>
          <li><%= link_to 'About me', about_path %></li>
          <% if user_signed_in? %>
            <li>
              <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
            </li>
          <% end %>
          <li>
          <li class="pull-right">
          <%= link_to(feed_path) do %>
            <i class="icon-plus-sign"></i> Feed
          <% end %>
          
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>

<div class="container">
<% if notice %><p class="alert alert-info"><%= notice %></p><% end %>
<% if alert %><p class="alert alert-error"><%= alert %></p><% end %>

		<%= yield %>
</div>
</body>
</html>
