<!DOCTYPE html>
<html>
<head>
  <title>Sicablog</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>  
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>

  <script>
  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
  })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

  ga('create', 'UA-322483-3', 'sicarul.com.ar');
  ga('send', 'pageview');

  </script>
</head>
<body>

<div class="navbar navbar-default navbar-fixed-top" role="navigation">
  <div class="container-fluid">
    
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#nav_bar_collapsed">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <p class="navbar-brand">sicarul</p>
    </div>

    <div class="collapse navbar-collapse" id="nav_bar_collapsed">
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to(posts_path) do %>
        <span class="glyphicon glyphicon-bullhorn"></span> Blog
        <% end %>
        </li>

        <li><%= link_to('http://www.github.com/Sicarul', {:target => '_blank'}) do %>
        <span class="glyphicon glyphicon-briefcase"></span> My github
        <% end %>

        <li><%= link_to(about_path) do %>
        <span class="glyphicon glyphicon-user"></span> About me
        <% end %>
        </li>

        <% if user_signed_in? %>
          <li>
            <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
          </li>
        <% end %>

        <li>
        <%= link_to('http://feeds.feedburner.com/sicarulblog', {:target => '_blank'}) do %>
          <span class="glyphicon glyphicon-plus"></span> Feed
        <% end %>
        
        </li>
      </ul>
    </div>
  </div>
</div>

<div class="container">
<% if notice %><p class="alert alert-info"><%= notice %></p><% end %>
<% if alert %><p class="alert alert-error"><%= alert %></p><% end %>

		<%= yield %>
</div>
</body>
</html>
